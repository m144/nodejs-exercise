{
  "name": "app",
  "version": "1.0.0",
  "description": "lytx exercise app",
  "main": "index.js",
  "scripts": {
    "start": "nodemon server.js",
    "test": "mocha ./test/test.js --timeout 1000 --exit",
    "_comment": "Note: --exit in the test element is to force the test program to exit after finishing in case we use done()",
    "coverage": "nyc --reporter=lcov --reporter=text-lcov npm test"
  },
  "nyc": {
    "_comment": "Purpose of this part: to do code coverage within Mocha/Chai using Istanbul",
    "register": "babel-register",
    "include": [
      "**/*.js",
      "./*.js"
    ],
    "exclude": [
      "**/node_modules/**",
      "**/test/**",
      "**/coverage/**"
    ],
    "all": true
  },
  "author": "Manuel",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.0.0",
    "express-validator": "^6.6.0",
    "mysql": "^2.18.1"
  },
  "devDependencies": {
    "body-parser": "^1.19.0",
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "express": "^4.17.1",
    "mocha": "^8.0.1",
    "nodemon": "^2.0.4",
    "nyc": "^15.1.0"
  }
}
